{
	"name": "sveltekit-hono",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:cf": "npm run build && wrangler dev",
		"build": "vite build",
		"build:cf": "npm run build && wrangler deploy --dry-run",
		"preview": "vite preview",
		"preview:cf": "wrangler dev --local --port 8787",
		"deploy": "npm run build && wrangler deploy",
		"deploy:cf": "npm run build && wrangler deploy --env production",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:coverage:ui": "vitest --ui --coverage",
		"test:coverage:watch": "vitest --coverage",
		"coverage:report": "vitest run --coverage --reporter=verbose",
		"coverage:threshold": "vitest run --coverage --reporter=verbose --run"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@sveltejs/kit": "^2.36.2",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.38.3",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"vite": "^7.1.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.2",
		"@tailwindcss/postcss": "^4.1.12",
		"hono": "^4.9.4",
		"inversify": "^7.9.0",
		"postcss": "^8.5.6",
		"reflect-metadata": "^0.2.2",
		"zod": "^4.1.1"
	}
}
